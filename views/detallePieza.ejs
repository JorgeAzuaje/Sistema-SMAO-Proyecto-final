<%- include("template/cabecera", {tituloWeb: 'Detalle de Pieza'}) %>

    <div class="container">
        <h1> Detalles de la Pieza </h1>
        <% if (error) { %>
            <p>
                <%= mensaje %>
            </p>
            <a 
            href="/api/piezas" 
            class="btn btn-dark btn-block"
            >Volver a Piezas</a>
        <% } %>
        <% if (!error) { %>

            <form id="editar" data-id="<%= piezas._id %>">
                <input 
                    type="text"
                    value="<%= piezas.marca %>"
                    class="form-control my-2"
                    name="marca"
                    id="marcaInput"
                >
                <input 
                    type="text"
                    value="<%= piezas.tipo %>"
                    class="form-control my-2"
                    name="tipo"
                    id="tipoInput"
                >
                <input 
                    type="text"
                    value="<%= piezas.modelo %>"
                    class="form-control my-2"
                    name="modelo"
                    id="modeloInput"
                >
                <input 
                    type="text"
                    value="<%= piezas.descripcion %>"
                    class="form-control my-2"
                    name="descripcion"
                    id="descripcionInput"
                >
                <input 
                    type="text"
                    value="<%= piezas.estado %>"
                    class="form-control my-2"
                    name="estado"
                    id="estadoInput"
                >
                <button
                    class="btn btn-warning btn-sm"
                    type="submit"
                >
                Editar
            </button>
        </form>

        <hr>

        <button
                class="btn btn-danger btn-sm"
                id="btnEliminar"
                data-id="<%= piezas._id %>">
                Eliminar
        </button>

            
        <% } %>
    </div>

<%- include("template/footer") %>

<script>

    const btnEliminar = document.querySelector('#btnEliminar');
    

   btnEliminar.addEventListener('click', async () => {
        const id = btnEliminar.dataset.id
        console.log('id', id)
        try {
            const data = await fetch(/api/piezas/${id}, {
                method: 'delete'
            });
            const res = await data.json();

            if(res.estado){
                window.location.href = "/api/piezas"
            } else {
                console.log(res)
            }
        } catch (error) {
            console.log(error)
        }
    })

    const editar = document.querySelector('#editar')

    editar.addEventListener('submit', async (e) => {
        e.preventDefault()

        const marca = editar.elements['marca'].value
        const tipo = editar.elements['tipo'].value
        const modelo = editar.elements['modelo'].value
        const descripcion = editar.elements['descripcion'].value
        const estado = editar.elements['estado'].value

        const id = editar.dataset.id

        try {
            const data = await fetch(/api/piezas/${id}, {
                method: 'put',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({marca, tipo, modelo, descripcion, estado})
            })
            const res = await data.json()

        if (res.estado) {
            window.location.href = "/api/piezas"
        } else {        
            console.log(res)
        }
        } catch (error) {
            console.log(error)
        }
    })

</script>

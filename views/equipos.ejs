<%- include("template/cabecera", {tituloWeb: 'Equipos'}) %>

<div class="container">

  <h1 class="text-center p-3 mb-2"> Lista de Equipos </h1>

  <a
  class="btn btn-success btn-sm my-4"
  href="/api/equipos/crearEquipo"
  > 
  Crear Nuevo Equipo 
</a>

    <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">serial</th>
            <th scope="col">fecha_ini</th>
            <th scope="col">fecha_ult</th>
            <th scope="col">fecha_man</th>
            <th scope="col">id_Trab</th>
            <th scope="col">estado</th>
            <th scope="col">Acci√≥n</th>
          </tr>
        </thead>
        <tbody>

            <% if (arrayEquipos.length > 0) { %>
                <% arrayEquipos.forEach(equipos => { %>
                    <tr>
                      <th scope="row"><%= equipos._id %> </th>
                        <td><%= equipos.nombre %></td>
                        <td><%= equipos.descripcion %></td>
                        <td><%= equipos.serial %></td>
                        <td><%= equipos.fecha_ini %></td>
                        <td><%= equipos.fecha_ult %></td>
                        <td><%= equipos.fecha_man %></td>
                        <td><%= equipos.id_Trabajo %></td>
                        <td><%= equipos.estado %></td>
                        <td><a 
                          href="equipos/<%= equipos._id %>"
                          class="btn btn-warning btn-sm">
                          Editar
                        </a></td>
                      </tr>
                <% }) %>
               <% } %>
               
        </tbody>
      </table>

</div>

<%- include("template/footer") %>

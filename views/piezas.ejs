<%- include("template/cabecera", {tituloWeb: 'Piezas'}) %>

<div class="container">

  <h1 class="text-center p-3 mb-2"> Lista de Piezas </h1>

  <a
  class="btn btn-success btn-sm my-4"
  href="/api/piezas/crearPieza"
  > 
  Crear Nueva pieza 
</a>

    <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Marca</th>
            <th scope="col">Tipo</th>
            <th scope="col">Modelo</th>
            <th scope="col">Descripcion</th>
            <th scope="col">estado</th>
            <th scope="col">Acci√≥n</th>
          </tr>
        </thead>
        <tbody>

            <% if (arrayPiezas.length > 0) { %>
                <% arrayPiezas.forEach(piezas => { %>
                    <tr>
                      <th scope="row"><%= piezas._id %> </th>
                        <td><%= piezas.marca %></td>
                        <td><%= piezas.tipo %></td>
                        <td><%= piezas.modelo %></td>
                        <td><%= piezas.descripcion %></td>
                        <td><%= piezas.estado %></td>
                        <td><a 
                          href="piezas/<%= piezas._id %>"
                          class="btn btn-warning btn-sm">
                          Editar
                        </a>
                      </td>
                      </tr>
                <% }) %>
               <% } %>
               
        </tbody>
      </table>

</div>

<%- include("template/footer") %>

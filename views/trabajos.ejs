<%- include("template/cabecera", {tituloWeb: 'Trabajos'}) %>

<div class="container">

  <h1 class="text-center p-3 mb-2"> Lista de Trabajos </h1>

  <a
  class="btn btn-success btn-sm my-4"
  href="/api/trabajos/crearTrabajo"
  > 
  Crear Nuevo Trabajo 
</a>

    <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">idEquipo</th>
            <th scope="col">Nombre</th>
            <th scope="col">fecha_Plan</th>
            <th scope="col">fecha_ini</th>
            <th scope="col">fecha_fin</th>
            <th scope="col">obsTecnico</th>
            <th scope="col">estado</th>
            <th scope="col">Acci√≥n</th>
          </tr>
        </thead>
        <tbody>

            <% if (arrayTrabajos.length > 0) { %>
                <% arrayTrabajos.forEach(trabajos => { %>
                    <tr>
                      <th scope="row"><%= trabajos._id %> </th>
                        <td><%= trabajos.idEquipo %></td>
                        <td><%= trabajos.nombreEquipo %></td>
                        <td><%= trabajos.fechaPlan %></td>
                        <td><%= trabajos.fecha_ini %></td>
                        <td><%= trabajos.fecha_fin %></td>
                        <td><%= trabajos.obsTecnico %></td>
                        <td><%= trabajos.estado %></td>
                        <td><a 
                          href="trabajos/<%= trabajos._id %>"
                          class="btn btn-warning btn-sm">
                          Editar
                        </a></td>
                      </tr>
                <% }) %>
               <% } %>
               
        </tbody>
      </table>

</div>

<%- include("template/footer") %>